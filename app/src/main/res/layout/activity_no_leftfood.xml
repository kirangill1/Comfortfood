<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_no_leftfood"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gursewak.comfortfood.No_leftfood"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/gradientt"
        android:scaleType="centerCrop"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            />
            <TextView
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:text="No Left Food"
                android:textSize="25dp"
                android:textColor="#fff"
                android:gravity="center"
                android:textStyle="bold"
                android:background="@drawable/circlegreengrad"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:id="@+id/text_view"
                android:layout_marginBottom="30dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SORRY..!!   NO LEFT FOOD TODAY"
                android:textColor="#fff"
                android:layout_below="@+id/text_view"
                android:textSize="50dp"
                android:textStyle="bold"
                />


        </RelativeLayout>
        </ScrollView>
    </RelativeLayout>

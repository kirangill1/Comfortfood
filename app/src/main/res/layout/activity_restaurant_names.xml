<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_restaurant_names_drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#faf4f4"
    tools:context="com.example.gursewak.comfortfood.Restaurant_names"
    >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/reddy"
        android:scaleType="centerCrop"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="horizontal"
       />


    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/orderr"
        android:layout_margin="6dp"
        android:onClick="lines"
        />
           <TextView
               android:layout_width="160dp"
               android:layout_height="150dp"
               android:text="RESTAURANT NAMES"
               android:textSize="21dp"
               android:textColor="#fff"
               android:gravity="center"
               android:textStyle="bold"
               android:background="@drawable/circle"
               android:layout_centerHorizontal="true"
               android:layout_marginTop="10dp"
               android:id="@+id/text_view"
               android:layout_marginBottom="20dp"
               />


        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rest_names_recycler"
            android:layout_below="@+id/text_view">

        </android.support.v7.widget.RecyclerView>


    </RelativeLayout>



</ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:background="@drawable/reddy">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/first_lyout"
            android:gravity="left"

            />

        <TextView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:text="COMFORT FOOD"
            android:textSize="20dp"
            android:textColor="#fff"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@drawable/circle"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:id="@+id/text_view2"
            />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#fff"
            android:layout_margin="20dp"
            android:id="@+id/profile_"
            android:onClick="profile"
            android:clickable="true"
            android:layout_below="@+id/text_view2"
            >
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/uuser"
                android:padding="5dp"
                android:id="@+id/usser"
                android:tint="#e60f0f"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Profile"

                android:textSize="20dp"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_margin="9dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#fff"
            android:layout_below="@+id/profile_"
            android:layout_margin="20dp"
            android:id="@+id/order_"
            android:onClick="order"
            android:clickable="true"
            >

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/orderr"
                android:id="@+id/order"
                android:tint="#e60f0f"
                android:padding="5dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Orders"
                android:textSize="20dp"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_margin="9dp"


                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#fff"
            android:layout_below="@+id/order_"
            android:layout_margin="20dp"
            android:id="@+id/feedback_"
            android:onClick="feedback"
            android:clickable="true"

            >

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/feedbackk"
                android:id="@+id/feedback"
                android:tint="#e60f0f"
                android:padding="5dp"
                android:background="#fff"

                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Feedback"
                android:textSize="20dp"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_margin="9dp"
                />
        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/feedback_"
            android:layout_margin="39dp"
            android:background="@color/redcolor"
            android:text="LOGOUT"
            android:textColor="#fff"
            android:textStyle="bold"
            android:textSize="35dp"
            android:onClick="logoutt"
            android:clickable="true"
            />



    </RelativeLayout>
    </android.support.v4.widget.DrawerLayout>




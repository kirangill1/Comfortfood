<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_restaurant_names_drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gursewak.comfortfood.Restaurant_names"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="horizontal"
       />

           <ImageView
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:src="@drawable/pizza"
               android:scaleType="centerCrop"
               />
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/orderr"
        android:layout_margin="6dp"
        android:onClick="lines"
        />
           <TextView
               android:layout_width="160dp"
               android:layout_height="150dp"
               android:text="RESTAURANT NAMES"
               android:textSize="21dp"
               android:textColor="#fff"
               android:gravity="center"
               android:textStyle="bold"
               android:background="@drawable/circle"
               android:layout_centerHorizontal="true"
               android:layout_marginTop="10dp"
               android:id="@+id/text_view"
               android:layout_marginBottom="20dp"
               />
         <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="40dp"
               android:layout_below="@+id/text_view"
               android:background="#fff"
               android:layout_margin="15dp"
               >
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="40dp"
                   android:text="brother dhaba"
                   android:textColor="#fff"
                   android:textStyle="bold"
                   android:textSize="35dp"
                   android:layout_marginLeft="3dp"
                   android:onClick="brother_dhaba"
                   android:background="@color/redcolor"
                   />

           </RelativeLayout>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/first_lyout"
            android:gravity="left"

            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/pizza"
            android:scaleType="centerCrop"/>
        <TextView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:text="COMFORT FOOD"
            android:textSize="20dp"
            android:textColor="#fff"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@drawable/circle"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:id="@+id/text_view"
            />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#fff"
            android:layout_margin="20dp"
            android:id="@+id/profile_"
            android:onClick="profile"
            android:layout_below="@+id/text_view"
            >
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/uuser"
                android:padding="5dp"
                android:id="@+id/usser"
                android:background="@color/redcolor"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textSize="20dp"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_margin="9dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#fff"
            android:layout_below="@+id/profile_"
            android:layout_margin="20dp"
            android:id="@+id/order_"
            >

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/orderr"
                android:id="@+id/order"
                android:background="@color/redcolor"
                android:padding="5dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Orders"
                android:textSize="20dp"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_margin="9dp"


                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#fff"
            android:layout_below="@+id/order_"
            android:layout_margin="20dp"
            android:id="@+id/feedback_"

            >

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/feedbackk"
                android:id="@+id/feedback"
                android:background="@color/redcolor"
                android:padding="5dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Feedback"
                android:textSize="20dp"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_margin="9dp"
                />
        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/feedback_"
            android:layout_margin="39dp"
            android:background="@color/redcolor"
            android:text="LOGOUT"
            android:textColor="#fff"
            android:textStyle="bold"
            android:textSize="35dp"
            />



    </RelativeLayout>
    </android.support.v4.widget.DrawerLayout>




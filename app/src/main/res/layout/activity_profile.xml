<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gursewak.comfortfood.Profile"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/redcolor"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:id="@+id/relative_layout"
            android:layout_marginBottom="19dp"
            >
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/circlee"
                android:layout_margin="25dp"
                android:id="@+id/image_view"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="KIRAN GILL"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="20dp"
               android:layout_marginLeft="150dp"
                android:layout_marginTop="40dp"
                android:id="@+id/kiran_tv"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="ASR , PUNJAB"
                android:textColor="#fff"
                android:textSize="15dp"
                android:textStyle="bold"
               android:layout_marginLeft="150dp"
                android:layout_below="@+id/kiran_tv"
                android:layout_marginTop="5dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relative_layout"
            android:background="#fff"
            android:id="@+id/name"
            android:layout_margin="10dp"
            >
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/svg_user"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:layout_centerVertical="true"

                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textColor="#000"
                android:textSize="25dp"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="10dp"
                android:layout_centerVertical="true"

                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:id="@+id/mobile"
            android:layout_margin="10dp"
            android:background="#fff"
            >
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/phone"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:layout_centerVertical="true"

                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mobile no"
                android:textColor="#000"
                android:textSize="25dp"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="10dp"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mobile"
            android:layout_margin="10dp"
            android:background="#fff"
            android:id="@+id/email"
            >
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/email"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:layout_centerVertical="true"

                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="E-mail"
                android:textColor="#000"
                android:textSize="25dp"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="10dp"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email"
            android:id="@+id/address"
            android:layout_margin="10dp"
            android:background="#fff"
            >
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/adress"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:layout_centerVertical="true"

                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Address"
                android:textColor="#000"
                android:textSize="25dp"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="10dp"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>



    </RelativeLayout>

</RelativeLayout>




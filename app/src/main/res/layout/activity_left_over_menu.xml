<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_left_over_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.gursewak.comfortfood.Left_over_menu">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/gradientt"
        android:scaleType="centerCrop"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:text="MENU"
                android:textSize="30dp"
                android:textColor="#fff"
                android:gravity="center"
                android:textStyle="bold"
                android:background="@drawable/circlegreengrad"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:id="@+id/text_view"
                />

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/rest_menu_recycler"
                android:layout_below="@+id/text_view"
                >

            </android.support.v7.widget.RecyclerView>




        </RelativeLayout>
    </ScrollView>

</RelativeLayout>

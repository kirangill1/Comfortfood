<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_newitem"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gursewak.comfortfood.Add_newitem">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/pinkyy"
        android:scaleType="centerCrop"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

            />
        <TextView
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:text="ADD NEW ITEM"
            android:textSize="24dp"
            android:textColor="#fff"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@drawable/circle"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:id="@+id/text_view"
            android:layout_marginBottom="30dp"

            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/text_view"
            android:background="@drawable/roundedrectanle"
            android:layout_margin="15dp"
            android:id="@+id/item_name"
            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Item name"
                android:textColorHint="#686262"
                android:layout_margin="5dp"
                android:textColor="#000"
                android:id="@+id/item_namee"
                android:background="@null"
                android:padding="3dp"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/item_name"
            android:background="@drawable/roundedrectanle"
            android:layout_margin="15dp"
            android:id="@+id/item_price"
            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Item price"
                android:textColorHint="#686262"
                android:layout_margin="5dp"
                android:textColor="#000"
                android:background="@null"
                android:padding="3dp"
                android:id="@+id/item_pricee"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/item_price"
            android:background="@drawable/roundedrectanle"
            android:layout_margin="15dp"
            android:id="@+id/item_type"
            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Item type"
                android:textColorHint="#686262"
                android:layout_margin="5dp"
                android:textColor="#000"
                android:background="@null"
                android:padding="3dp"
                android:id="@+id/item_typee"
                />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_type"
            android:orientation="horizontal"
            android:id="@+id/image_layout"
            >


            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/restaurant_logo"
                android:id="@+id/menu_image"
                android:onClick="add_image"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_layout"
            android:background="#ef868b"


            android:layout_centerHorizontal="true"
            android:text="ADD"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="#d21d1d"
            android:onClick="save_menu"
            android:clickable="true"

            />




</RelativeLayout>
    </ScrollView>
    </RelativeLayout>



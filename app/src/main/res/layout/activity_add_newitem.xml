<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_newitem"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gursewak.comfortfood.Add_newitem">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/gradientt" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/text_view"
                android:layout_width="170dp"
                android:layout_height="130dp"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="ADD NEW ITEM"
                android:textColor="#feffff"
                android:textSize="32dp"
                android:textStyle="bold"

                />

            <RelativeLayout
                android:id="@+id/item_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/text_view"
                android:layout_margin="15dp"
                android:background="@drawable/ciclegreen">

                <EditText
                    android:id="@+id/item_namee"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:background="@null"
                    android:hint="Item name"
                    android:padding="3dp"
                    android:textColor="#000"
                    android:textColorHint="#686262" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/item_price"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/item_name"
                android:layout_margin="15dp"
                android:background="@drawable/ciclegreen">

                <EditText
                    android:id="@+id/item_pricee"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:background="@null"
                    android:hint="Item price"
                    android:inputType="number"
                    android:padding="3dp"
                    android:textColor="#000"
                    android:textColorHint="#686262" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/item_qty_lay"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/item_price"
                android:layout_margin="15dp"
                android:background="@drawable/ciclegreen">

                <EditText
                    android:id="@+id/item_qty"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:background="@null"
                    android:hint="Item qty"
                    android:inputType="number"
                    android:padding="3dp"
                    android:textColor="#000"
                    android:textColorHint="#686262" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/item_type"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/item_qty_lay"
                android:layout_margin="15dp"
                android:background="@drawable/ciclegreen">

                <EditText
                    android:id="@+id/item_typee"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:background="@null"
                    android:hint="Item type"
                    android:padding="3dp"
                    android:textColor="#000"
                    android:textColorHint="#686262" />
            </RelativeLayout>


            <LinearLayout
                android:id="@+id/image_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_type"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp">


                <ImageView
                    android:id="@+id/menu_image"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="centerCrop"
                    android:gravity="center"
                    android:onClick="add_image"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/add_image" />
            </LinearLayout>

            <Button
                android:id="@+id/send"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image_layout"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:background="@drawable/ciclegreen"
                android:clickable="true"
                android:onClick="save_menu"
                android:text="ADD"
                android:textColor="#fff"
                android:textSize="30dp" />


        </RelativeLayout>
    </ScrollView>
</RelativeLayout>



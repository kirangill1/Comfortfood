<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_userchange_pass"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gursewak.comfortfood.userchange_pass"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/gradientt"
        android:scaleType="centerCrop"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <TextView
            android:layout_width="180dp"
            android:layout_height="110dp"
            android:text="CHANGE PASSWORD"
            android:textSize="31dp"
            android:textColor="#fff"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:id="@+id/text_view"
            android:layout_marginBottom="30dp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/text_view"
            android:background="@drawable/ciclegreen"
            android:layout_margin="15dp"
            android:id="@+id/previous_pass"
            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Previous password"
                android:textColorHint="#686262"
                android:layout_margin="5dp"
                android:textColor="#000"
                android:background="@null"
                android:id="@+id/previous_et"
                android:inputType="textPassword"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/previous_pass"
            android:background="@drawable/ciclegreen"
            android:layout_margin="15dp"
            android:id="@+id/new_pass"
            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="New password"
                android:textColorHint="#686262"
                android:layout_margin="5dp"
                android:textColor="#000"
                android:background="@null"
                android:id="@+id/new_et"
                android:inputType="textPassword"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/new_pass"
            android:background="@drawable/ciclegreen"
            android:layout_margin="15dp"
            android:id="@+id/confirm_pass"
            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Confirm password"
                android:textColorHint="#686262"
                android:layout_margin="5dp"
                android:textColor="#000"
                android:background="@null"
                android:id="@+id/confirm_et"
                android:inputType="textPassword"
                />
        </RelativeLayout>
        <Button
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_below="@+id/confirm_pass"
            android:background="@drawable/ciclegreen"
            android:layout_margin="15dp"
            android:layout_centerHorizontal="true"
            android:text="ADD"
            android:textSize="40dp"
            android:textStyle="bold"
            android:textColor="#fff"

            />


    </RelativeLayout>

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_usignup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gursewak.comfortfood.Userlogin"
    > <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/pizza"
            android:scaleType="centerCrop"
            />
        <TextView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:text="COMFORT FOOD"
            android:textSize="23dp"
            android:textColor="#fff"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@drawable/circle"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:id="@+id/text_view"
            android:layout_marginBottom="5dp"

            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#fff"
            android:layout_below="@+id/text_view"
            android:layout_margin="15dp"
            android:id="@+id/text_view1"
            >
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/uuser"
                android:padding="5dp"
                android:background="@color/redcolor"
                android:tint="#fff"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="username"
                android:textColor="#000"
                android:textColorHint="#686262"
                android:background="@null"
                android:paddingLeft="5dp"
                android:id="@+id/edittext_user"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#fff"
            android:layout_below="@+id/text_view1"
            android:layout_margin="15dp"
            android:id="@+id/text_view3"
            >
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/keyy"
                android:padding="5dp"
                android:background="@color/redcolor"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="password"
                android:textColor="#000"
                android:textColorHint="#686262"
                android:background="@null"
                android:paddingLeft="5dp"
                android:id="@+id/edittext_pass"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/redcolor"
            android:layout_below="@id/text_view3"
            android:layout_margin="15dp"
            android:gravity="center"
            android:onClick="login"
            android:clickable="true"
            android:id="@+id/linear_layout"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LOG IN"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="30dp"
                android:id="@+id/text_viewlogin"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/redcolor"
            android:layout_below="@id/linear_layout"
            android:layout_margin="15dp"
            android:gravity="center"
            android:onClick="signup"
            android:clickable="true"
            android:id="@+id/linear_layout1"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SIGN UP"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="30dp"
                android:id="@+id/text_viewsignup"
                />

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="forget password"
            android:textSize="30dp"
            android:textColor="#000"
            android:layout_below="@+id/linear_layout1"
            android:gravity="center"
            android:textStyle="bold"
            android:clickable="true"
            android:onClick="forget_passwrd"
            android:id="@+id/forget_pass"
            android:background="@drawable/roundedrectanle"
            android:layout_margin="10dp"

            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Change password"
            android:textSize="30dp"
            android:textColor="#000"
            android:layout_below="@+id/forget_pass"
            android:gravity="center"
            android:textStyle="bold"
            android:clickable="true"
            android:onClick="change_password"
            android:background="@drawable/roundedrectanle"
            android:layout_margin="10dp"
            />


    </RelativeLayout>

</ScrollView>
</RelativeLayout>



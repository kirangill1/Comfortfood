<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_admin_newpswrd"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gursewak.comfortfood.Admin_newpswrd"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/gradientt"
            android:scaleType="centerCrop"/>
        <TextView
            android:layout_width="190dp"
            android:layout_height="100dp"
            android:text="ADMIN NEW PASSWORD"
            android:textSize="30dp"
            android:textColor="#fff"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:id="@+id/text_view"
            android:layout_marginBottom="20dp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/text_view"
            android:background="@drawable/ciclegreen"
            android:layout_margin="15dp"
            android:id="@+id/item_name"
            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Password"
                android:textColorHint="#686262"
                android:layout_margin="5dp"
                android:textColor="#000"
                android:background="@null"
                android:id="@+id/passwrd_et"
                android:padding="3dp"
                android:inputType="textPassword"

                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/item_name"
            android:background="@drawable/ciclegreen"
            android:layout_margin="15dp"
            android:id="@+id/item_type"
            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Confirm Password"
                android:textColorHint="#686262"
                android:layout_margin="5dp"
                android:textColor="#000"
                android:background="@null"
                android:id="@+id/confirmpass_et"
                android:inputType="textPassword"
                android:padding="3dp"
                />
        </RelativeLayout>

        <Button
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_below="@+id/item_type"
            android:background="@drawable/ciclegreen"
            android:layout_margin="15dp"
            android:layout_centerHorizontal="true"
            android:text="ADD"
            android:textSize="40dp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:onClick="add_"

            />


    </RelativeLayout>
</RelativeLayout>





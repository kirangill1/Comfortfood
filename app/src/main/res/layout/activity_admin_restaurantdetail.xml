<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_restaurant__detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gursewak.comfortfood.Admin_restaurantDetail">

    <ImageView

     android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/pinkie"
        android:scaleType="centerCrop"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <TextView
            android:layout_width="160dp"
            android:layout_height="150dp"
            android:text="RESTAURANT DETAIL"
            android:textSize="20dp"
            android:textColor="#fff"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@drawable/circle_purple"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:id="@+id/text_view"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/roundedrectanle"
            android:layout_margin="10dp"
            android:layout_below="@id/text_view"
            android:id="@+id/restaurant_2"

            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Restaurant name"
                android:textColorHint="#686262"
                android:textColor="#000"
                android:background="@null"
                android:layout_marginLeft="3dp"
                android:id="@+id/restaurantname_"
                android:padding="7dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/roundedrectanle"
            android:layout_margin="10dp"
            android:layout_below="@id/restaurant_2"
            android:id="@+id/restaurant_3"
            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Address"
                android:textColorHint="#686262"
                android:textColor="#000"
                android:background="@null"
                android:layout_marginLeft="3dp"
                android:id="@+id/address_"
                android:padding="7dp"
                />
</LinearLayout>
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/roundedrectanle"
        android:layout_margin="10dp"
        android:layout_below="@id/restaurant_3"
         android:id="@+id/restaurant_4"
        >
         <EditText
             android:layout_width="match_parent"
             android:layout_height="40dp"
             android:hint="City"
             android:textColorHint="#686262"
             android:textColor="#000"
             android:background="@null"
             android:layout_marginLeft="3dp"
             android:id="@+id/city_"
             android:padding="7dp"
             />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/roundedrectanle"
            android:layout_margin="10dp"
            android:layout_below="@id/restaurant_4"
            android:id="@+id/restaurant_5"
            >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Food type"
                android:textColorHint="#686262"
                android:textColor="#000"
                android:background="@null"
                android:layout_marginLeft="3dp"
                android:id="@+id/foodtype_"
                android:padding="7dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/roundedrectanle"
            android:layout_margin="10dp"
            android:layout_below="@id/restaurant_5"
            android:id="@+id/restaurant_6"
            >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Discount"
                android:textColorHint="#686262"
                android:inputType="number"
                android:maxLength="2"
                android:textColor="#000"
                android:background="@null"
                android:layout_marginLeft="3dp"
                android:id="@+id/discount"
                android:padding="7dp"
                />

        </LinearLayout>

        <Button
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_below="@+id/restaurant_6"
            android:background="#fc0273"
            android:layout_margin="15dp"
            android:layout_centerHorizontal="true"
            android:text="ADD"
            android:id="@+id/add_btn"
            android:onClick="add_details"
            android:textSize="40dp"
            android:textStyle="bold"
            android:textColor="#f477b7"

            />



    </RelativeLayout>


    </ScrollView>

</RelativeLayout>


<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gursewak.comfortfood.Admin_login">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
   <ImageView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:src="@drawable/pizza"
       android:scaleType="centerCrop"
       />
   <TextView
       android:layout_width="150dp"
       android:layout_height="150dp"
       android:text="COMFORT FOOD"
       android:textSize="25dp"
       android:textColor="#fff"
       android:gravity="center"
       android:textStyle="bold"
       android:background="@drawable/circle"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="10dp"
       android:id="@+id/text_view"
       android:layout_marginBottom="10dp"

       />
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="50dp"
       android:background="#fff"
       android:layout_below="@+id/text_view"
       android:layout_margin="15dp"
       android:id="@+id/text_view1"
       >
      <ImageView
          android:layout_width="50dp"
          android:layout_height="50dp"
          android:src="@drawable/boy"
          android:padding="10dp"
          android:background="@color/redcolor"
          android:tint="#fff"
          />
       <EditText
           android:layout_width="match_parent"
           android:layout_height="50dp"
           android:hint="username"
           android:textColor="#000"
           android:textColorHint="#686262"
           android:background="@null"
           android:paddingLeft="5dp"
           android:id="@+id/edittext_user"
           />

   </LinearLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="50dp"
       android:background="#fff"
       android:layout_below="@+id/text_view1"
       android:layout_margin="15dp"
       android:id="@+id/text_view3"
       >
      <ImageView
          android:layout_width="50dp"
          android:layout_height="50dp"
          android:src="@drawable/keyy"
          android:padding="10dp"
          android:background="@color/redcolor"
          />
      <EditText
          android:layout_width="match_parent"
          android:layout_height="50dp"
          android:hint="password"
          android:textColor="#000"
          android:textColorHint="#686262"
          android:background="@null"
          android:paddingLeft="5dp"
          android:id="@+id/edittext_pass"
          />
   </LinearLayout>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:background="@color/redcolor"
      android:layout_below="@id/text_view3"
      android:layout_margin="15dp"
      android:gravity="center"
      android:onClick="login"
      android:clickable="true"
      android:id="@+id/linear_layout"
      >
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="LOGIN"
         android:textColor="#fff"
         android:textStyle="bold"
         android:textSize="30dp"
         android:id="@+id/text_viewlogin"
        />

  </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/redcolor"
            android:layout_below="@id/linear_layout"
            android:layout_margin="15dp"
            android:gravity="center"
            android:onClick="signup"
            android:clickable="true"
            android:id="@+id/linear_layout1"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SIGN UP"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="30dp"
                android:id="@+id/text_viewsignup"
                />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="forget password"
            android:textSize="30dp"
            android:textColor="#000"
            android:layout_below="@+id/linear_layout1"
            android:gravity="center"
            android:textStyle="bold"
            android:clickable="true"
            android:onClick="forget_passwrd"
            android:id="@+id/forget_pass"
            android:background="@drawable/roundedrectanle"
            android:layout_margin="10dp"

            />




    </RelativeLayout>

    </ScrollView>
</RelativeLayout>

